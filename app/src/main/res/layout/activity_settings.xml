<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/settingsLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="#FFFFFF">

    <!-- タイトル -->
    <TextView
        android:id="@+id/settingsTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="設定"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp" />

    <!-- ビープ音のチェックボックス -->
    <CheckBox
        android:id="@+id/checkbox_beep"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:minHeight="48dp"
        android:text="時報前のビープ音を鳴らす" />

    <!-- プリセット追加ボタン -->
    <Button
        android:id="@+id/btnAddPreset"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="プリセットを追加する"
        android:layout_marginTop="16dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="プリセット保存場所: /sdcard/Android/data/com.tsudetsun.voichime/files/voice_presets"
        android:autoLink="web"
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="16sp"
        android:padding="8dp" />

    <TextView
        android:id="@+id/preset_add_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="プリセットの追加方法はここ"
        android:autoLink="web"
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="16sp"
        android:padding="8dp" />

    <!-- クレジットボタン -->
    <Button
        android:id="@+id/btnCredits"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="クレジットを見る"
        android:layout_marginBottom="24dp" />

    <!-- 戻るボタン -->
    <Button
        android:id="@+id/btnBack"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="戻る" />
</LinearLayout>
